{
  "name": "@zena-lang/runtime",
  "version": "0.0.1",
  "type": "module",
  "main": "./index.js",
  "types": "./index.d.ts",
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "default": "./index.js"
    }
  },
  "scripts": {
    "build": "wireit",
    "test": "wireit"
  },
  "wireit": {
    "build": {
      "command": "tsc",
      "files": [
        "src/**/*.ts",
        "tsconfig.json"
      ],
      "output": [
        "lib",
        "test",
        "index.{js,d.ts,js.map,d.ts.map}"
      ],
      "clean": "if-file-deleted"
    },
    "test": {
      "command": "node --enable-source-maps --test test/**/*_test.js",
      "dependencies": [
        "build"
      ]
    }
  },
  "devDependencies": {
    "@zena-lang/compiler": "*",
    "typescript": "^5.0.0",
    "@types/node": "^20.0.0"
  }
}
