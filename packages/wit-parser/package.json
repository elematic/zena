{
  "name": "@zena-lang/wit-parser",
  "version": "0.0.1",
  "type": "module",
  "description": "WIT (WebAssembly Interface Types) parser for Zena",
  "private": true,
  "scripts": {
    "build": "wireit",
    "test": "wireit",
    "test:unit": "wireit",
    "test:interop": "wireit"
  },
  "wireit": {
    "build": {
      "command": "tsc",
      "files": [
        "src/**/*.ts",
        "tsconfig.json"
      ],
      "output": [
        "scripts/**",
        "lib/**"
      ],
      "clean": "if-file-deleted"
    },
    "test": {
      "command": "node --enable-source-maps scripts/run-tests.js && node --test --enable-source-maps test/lexer_test.js test/parser_test.js",
      "dependencies": [
        "build",
        "../compiler:build",
        "../stdlib:build"
      ],
      "files": [
        "tests/**/*.wit",
        "tests/**/*.wit.json",
        "tests/**/*.wit.result",
        "zena/**/*.zena"
      ],
      "output": []
    },
    "test:unit": {
      "command": "node --test --enable-source-maps test/lexer_test.js test/parser_test.js",
      "dependencies": [
        "build",
        "../compiler:build",
        "../stdlib:build"
      ],
      "files": [
        "zena/**/*.zena"
      ],
      "output": []
    },
    "test:interop": {
      "command": "node --test --enable-source-maps test/echo_test.js",
      "dependencies": [
        "build",
        "../compiler:build",
        "../stdlib:build"
      ],
      "files": [
        "zena/**/*.zena"
      ],
      "output": []
    }
  },
  "dependencies": {
    "@zena-lang/compiler": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "typescript": "^5.8.3"
  }
}
