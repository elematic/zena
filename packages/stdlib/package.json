{
  "name": "@zena-lang/stdlib",
  "version": "0.0.1",
  "type": "module",
  "main": "index.js",
  "exports": {
    ".": "./index.js",
    "./zena/*": "./zena/*.zena"
  },
  "files": [
    "index.js",
    "index.d.ts",
    "zena"
  ],
  "scripts": {
    "build": "wireit",
    "test": "wireit",
    "build:wasi-tests": "wireit",
    "test:wasmtime": "wireit"
  },
  "wireit": {
    "build": {
      "command": "tsc",
      "files": [
        "src/**/*.ts",
        "tsconfig.json",
        "zena/**/*.zena"
      ],
      "output": [
        "index.{js,d.ts,js.map,d.ts.map}"
      ],
      "clean": "if-file-deleted"
    },
    "build:wasi-tests": {
      "command": "node scripts/build-wasi-tests.js",
      "files": [
        "scripts/build-wasi-tests.js",
        "zena/**/*.zena",
        "tests/fs/**/*.zena",
        "tests/memory_test.zena"
      ],
      "output": [
        "tests/out/**/*.wasm"
      ],
      "dependencies": [
        "../cli:build"
      ]
    },
    "test": {
      "dependencies": [
        "test:wasmtime",
        "test:node"
      ]
    },
    "test:node": {
      "dependencies": [
        "../compiler:test:portable"
      ]
    },
    "test:wasmtime": {
      "command": "node scripts/run-wasmtime.js",
      "files": [
        "scripts/run-wasmtime.js"
      ],
      "output": [],
      "dependencies": [
        "build:wasi-tests"
      ]
    }
  },
  "dependencies": {
    "glob": "^11.1.0"
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "wireit": "^0.14.4"
  }
}
