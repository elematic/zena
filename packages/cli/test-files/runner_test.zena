// Test file for the CLI test runner
// Uses zena:test with suite() and test()
import { suite, test, TestContext } from 'zena:test';
import { equal, isTrue, isFalse } from 'zena:assert';

export let tests = suite('Runner Tests', (): void => {
  suite('Math', (): void => {
    test('addition', (ctx: TestContext): void => {
      equal(1 + 1, 2);
      equal(5 - 3, 2);
    });
    
    test('multiplication', (ctx: TestContext): void => {
      equal(10 * 2, 20);
    });
  });

  suite('Boolean', (): void => {
    test('isTrue', (ctx: TestContext): void => {
      isTrue(1 < 2);
      isTrue(true);
    });
    
    test('isFalse', (ctx: TestContext): void => {
      isFalse(1 > 2);
      isFalse(false);
    });
  });
});
