{
  "name": "@zena-lang/cli",
  "version": "0.0.1",
  "type": "module",
  "main": "lib/index.js",
  "bin": {
    "zena": "lib/cli.js"
  },
  "scripts": {
    "build": "wireit",
    "test": "wireit"
  },
  "wireit": {
    "build": {
      "command": "tsc",
      "files": [
        "src/**/*.ts",
        "tsconfig.json"
      ],
      "output": [
        "lib",
        "test"
      ],
      "clean": "if-file-deleted",
      "dependencies": [
        "../compiler:build",
        "../runtime:build"
      ]
    },
    "test": {
      "command": "run_tests() { if [ $# -eq 0 ]; then find test -name '*_test.js' -exec node --enable-source-maps --test --test-reporter=spec {} +; else node --enable-source-maps --test --test-reporter=spec \"$@\"; fi; }; run_tests",
      "files": [],
      "output": [],
      "dependencies": [
        "build"
      ]
    }
  },
  "dependencies": {
    "@zena-lang/compiler": "^0.0.1",
    "@zena-lang/runtime": "^0.0.1"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "typescript": "^5.9.3"
  }
}
