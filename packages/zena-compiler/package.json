{
  "name": "@zena-lang/zena-compiler",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "main": "index.js",
  "exports": {
    ".": "./index.js",
    "./zena/*": "./zena/*.zena"
  },
  "files": [
    "index.js",
    "index.d.ts",
    "zena"
  ],
  "scripts": {
    "build": "wireit",
    "test": "wireit"
  },
  "wireit": {
    "build": {
      "command": "tsc",
      "files": [
        "src/**/*.ts",
        "tsconfig.json",
        "zena/**/*.zena"
      ],
      "output": [
        "index.{js,d.ts,js.map,d.ts.map}"
      ],
      "clean": "if-file-deleted"
    },
    "test": {
      "command": "node --test test/*.js",
      "dependencies": [
        "build",
        "../compiler:build"
      ],
      "files": [
        "src/**/*.ts",
        "zena/**/*.zena"
      ],
      "output": []
    }
  },
  "devDependencies": {
    "@zena-lang/compiler": "*",
    "typescript": "^5.3.3",
    "wireit": "^0.14.4"
  }
}
