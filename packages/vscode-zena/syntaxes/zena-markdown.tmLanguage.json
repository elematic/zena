{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Zena Markdown",
  "scopeName": "text.html.markdown.zena.codeblock",
  "injectionSelector": "L:text.html.markdown",
  "patterns": [
    {
      "include": "#zena-code-block"
    }
  ],
  "repository": {
    "zena-code-block": {
      "begin": "(^|\\G)(\\s*)(\\`{3,}|~{3,})\\s*(?i:(zena))\\s*$",
      "beginCaptures": {
        "3": { "name": "punctuation.definition.markdown" },
        "4": { "name": "fenced_code.block.language.markdown" }
      },
      "end": "(^|\\G)(\\2|\\s{0,3})(\\3)\\s*$",
      "endCaptures": {
        "3": { "name": "punctuation.definition.markdown" }
      },
      "name": "markup.fenced_code.block.markdown",
      "contentName": "meta.embedded.block.zena",
      "patterns": [
        {
          "include": "source.zena"
        }
      ]
    }
  }
}
