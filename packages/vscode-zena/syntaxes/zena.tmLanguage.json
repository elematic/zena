{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Zena",
  "scopeName": "source.zena",
  "patterns": [
    {"include": "#comments"},
    {"include": "#decorators"},
    {"include": "#keywords"},
    {"include": "#declarations"},
    {"include": "#strings"},
    {"include": "#template-strings"},
    {"include": "#numbers"},
    {"include": "#operators"},
    {"include": "#punctuation"},
    {"include": "#types"},
    {"include": "#function-call"},
    {"include": "#identifiers"}
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.zena",
          "match": "//.*$"
        },
        {
          "name": "comment.block.zena",
          "begin": "/\\*",
          "end": "\\*/",
          "patterns": [
            {
              "include": "#comments"
            }
          ]
        }
      ]
    },
    "decorators": {
      "patterns": [
        {
          "name": "meta.decorator.zena",
          "match": "(@)(\\w+)",
          "captures": {
            "1": {"name": "punctuation.decorator.zena"},
            "2": {"name": "entity.name.function.decorator.zena"}
          }
        },
        {
          "name": "meta.decorator.zena",
          "begin": "(@)(\\w+)(\\()",
          "beginCaptures": {
            "1": {"name": "punctuation.decorator.zena"},
            "2": {"name": "entity.name.function.decorator.zena"},
            "3": {"name": "punctuation.definition.arguments.begin.zena"}
          },
          "end": "\\)",
          "endCaptures": {
            "0": {"name": "punctuation.definition.arguments.end.zena"}
          },
          "patterns": [
            {"include": "#strings"},
            {"include": "#numbers"},
            {"include": "#identifiers"},
            {
              "match": ",",
              "name": "punctuation.separator.comma.zena"
            }
          ]
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.flow.zena",
          "match": "\\b(if|else|while|for|return|match|case|throw)\\b"
        },
        {
          "name": "keyword.declaration.zena",
          "match": "\\b(let|var|const|class|interface|mixin|enum|type|distinct|function|symbol)\\b"
        },
        {
          "name": "keyword.modifier.zena",
          "match": "\\b(export|import|from|declare|final|abstract|static|extension|operator)\\b"
        },
        {
          "name": "keyword.operator.expression.zena",
          "match": "\\b(new|as|is|extends|implements|with|on)\\b"
        },
        {
          "name": "constant.language.boolean.zena",
          "match": "\\b(true|false)\\b"
        },
        {
          "name": "constant.language.null.zena",
          "match": "\\b(null)\\b"
        },
        {
          "name": "variable.language.this.zena",
          "match": "\\b(this)\\b"
        },
        {
          "name": "variable.language.super.zena",
          "match": "\\b(super)\\b"
        }
      ]
    },
    "declarations": {
      "patterns": [
        {
          "name": "meta.class.zena",
          "begin": "\\b(class)\\s+([A-Z][a-zA-Z0-9_$]*)",
          "beginCaptures": {
            "1": {"name": "keyword.declaration.class.zena"},
            "2": {"name": "entity.name.type.class.zena"}
          },
          "end": "(?=\\{|extends|implements|with)",
          "patterns": [{"include": "#type-parameters"}]
        },
        {
          "name": "meta.interface.zena",
          "begin": "\\b(interface)\\s+([A-Z][a-zA-Z0-9_$]*)",
          "beginCaptures": {
            "1": {"name": "keyword.declaration.interface.zena"},
            "2": {"name": "entity.name.type.interface.zena"}
          },
          "end": "(?=\\{|extends)",
          "patterns": [{"include": "#type-parameters"}]
        },
        {
          "name": "meta.mixin.zena",
          "begin": "\\b(mixin)\\s+([A-Z][a-zA-Z0-9_$]*)",
          "beginCaptures": {
            "1": {"name": "keyword.declaration.mixin.zena"},
            "2": {"name": "entity.name.type.mixin.zena"}
          },
          "end": "(?=\\{)",
          "patterns": [{"include": "#type-parameters"}]
        },
        {
          "name": "meta.enum.zena",
          "begin": "\\b(enum)\\s+([A-Z][a-zA-Z0-9_$]*)",
          "beginCaptures": {
            "1": {"name": "keyword.declaration.enum.zena"},
            "2": {"name": "entity.name.type.enum.zena"}
          },
          "end": "(?=\\{)"
        },
        {
          "name": "meta.type-alias.zena",
          "begin": "\\b(type)\\s+([A-Z][a-zA-Z0-9_$]*)",
          "beginCaptures": {
            "1": {"name": "keyword.declaration.type.zena"},
            "2": {"name": "entity.name.type.alias.zena"}
          },
          "end": "(?=\\=)",
          "patterns": [{"include": "#type-parameters"}]
        },
        {
          "name": "meta.constructor.zena",
          "match": "(#new)\\s*(?=\\()",
          "captures": {
            "1": {"name": "entity.name.function.constructor.zena"}
          }
        },
        {
          "name": "meta.symbol.zena",
          "match": "\\b(symbol)\\s+([a-zA-Z_$][a-zA-Z0-9_$]*)",
          "captures": {
            "1": {"name": "keyword.declaration.symbol.zena"},
            "2": {"name": "entity.name.type.symbol.zena"}
          }
        }
      ]
    },
    "type-parameters": {
      "name": "meta.type-parameters.zena",
      "begin": "<",
      "beginCaptures": {
        "0": {"name": "punctuation.definition.typeparameters.begin.zena"}
      },
      "end": ">",
      "endCaptures": {
        "0": {"name": "punctuation.definition.typeparameters.end.zena"}
      },
      "patterns": [
        {
          "match": "\\b(extends)\\b",
          "name": "keyword.operator.expression.extends.zena"
        },
        {"include": "#types"},
        {
          "match": ",",
          "name": "punctuation.separator.comma.zena"
        },
        {"include": "#type-parameters"}
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "support.type.primitive.zena",
          "match": "\\b(i32|i64|u32|f32|f64|boolean|string|void|never|any|anyref|ByteArray)\\b"
        },
        {
          "name": "support.type.builtin.zena",
          "match": "\\b(array|Array|Map|Box|Error|String|FixedArray|GrowableArray|ImmutableArray|Sequence|Iterator)\\b"
        },
        {
          "name": "entity.name.type.zena",
          "match": "\\b([A-Z][a-zA-Z0-9_$]*)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.single.zena",
          "begin": "'",
          "end": "'",
          "patterns": [{"include": "#string-escapes"}]
        },
        {
          "name": "string.quoted.double.zena",
          "begin": "\"",
          "end": "\"",
          "patterns": [{"include": "#string-escapes"}]
        }
      ]
    },
    "string-escapes": {
      "patterns": [
        {
          "name": "constant.character.escape.zena",
          "match": "\\\\(?:[nrt\\\\'\"]|0)"
        },
        {
          "name": "invalid.illegal.unknown-escape.zena",
          "match": "\\\\."
        }
      ]
    },
    "template-strings": {
      "name": "string.template.zena",
      "begin": "`",
      "end": "`",
      "patterns": [
        {
          "name": "constant.character.escape.zena",
          "match": "\\\\(?:[nrt\\\\`$]|0)"
        },
        {
          "name": "meta.template.expression.zena",
          "begin": "\\$\\{",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.template-expression.begin.zena"
            }
          },
          "end": "\\}",
          "endCaptures": {
            "0": {"name": "punctuation.definition.template-expression.end.zena"}
          },
          "patterns": [{"include": "$self"}]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.hex.zena",
          "match": "\\b0[xX][0-9a-fA-F]+\\b"
        },
        {
          "name": "constant.numeric.float.zena",
          "match": "\\b[0-9]+\\.[0-9]+\\b"
        },
        {
          "name": "constant.numeric.integer.zena",
          "match": "\\b[0-9]+\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.arrow.zena",
          "match": "=>"
        },
        {
          "name": "keyword.operator.comparison.zena",
          "match": "===|!==|==|!=|<=|>=|<|>"
        },
        {
          "name": "keyword.operator.logical.zena",
          "match": "&&|\\|\\||!"
        },
        {
          "name": "keyword.operator.assignment.zena",
          "match": "="
        },
        {
          "name": "keyword.operator.arithmetic.zena",
          "match": "\\+|-|\\*|/|%"
        },
        {
          "name": "keyword.operator.bitwise.zena",
          "match": "&|\\||\\^"
        },
        {
          "name": "keyword.operator.spread.zena",
          "match": "\\.\\.\\."
        },
        {
          "name": "keyword.operator.optional.zena",
          "match": "\\?"
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.terminator.statement.zena",
          "match": ";"
        },
        {
          "name": "punctuation.separator.comma.zena",
          "match": ","
        },
        {
          "name": "punctuation.accessor.zena",
          "match": "\\."
        },
        {
          "name": "punctuation.definition.block.zena",
          "match": "[{}]"
        },
        {
          "name": "punctuation.definition.array.zena",
          "match": "#?\\[|\\]"
        },
        {
          "name": "punctuation.definition.parameters.zena",
          "match": "[()]"
        },
        {
          "name": "punctuation.separator.colon.zena",
          "match": ":"
        },
        {
          "name": "punctuation.definition.mutable.zena",
          "match": "#(?=\\{|\\[)"
        }
      ]
    },
    "function-call": {
      "patterns": [
        {
          "name": "meta.function-call.zena",
          "match": "\\b([a-z_$][a-zA-Z0-9_$]*)\\s*(?=\\()",
          "captures": {
            "1": {"name": "entity.name.function.zena"}
          }
        },
        {
          "name": "meta.function-call.zena",
          "match": "\\b([a-z_$][a-zA-Z0-9_$]*)\\s*(?=<[^>]*>\\s*\\()",
          "captures": {
            "1": {"name": "entity.name.function.zena"}
          }
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "variable.other.private.zena",
          "match": "#[a-zA-Z_$][a-zA-Z0-9_$]*"
        },
        {
          "name": "variable.other.zena",
          "match": "\\b[a-z_$][a-zA-Z0-9_$]*\\b"
        }
      ]
    }
  }
}
