{
  "name": "vscode-zena",
  "displayName": "Zena Language",
  "description": "Syntax highlighting for the Zena programming language",
  "version": "0.1.0",
  "publisher": "zena-lang",
  "engines": {
    "vscode": "^1.75.0"
  },
  "scripts": {
    "package": "vsce package --no-dependencies",
    "install-ext": "vsce package --no-dependencies && code --install-extension vscode-zena-0.1.0.vsix"
  },
  "devDependencies": {
    "@vscode/vsce": "^3.2.1"
  },
  "files": [
    "syntaxes",
    "language-configuration.json",
    "README.md"
  ],
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "zena",
        "aliases": [
          "Zena",
          "zena"
        ],
        "extensions": [
          ".zena"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "zena",
        "scopeName": "source.zena",
        "path": "./syntaxes/zena.tmLanguage.json"
      },
      {
        "scopeName": "text.html.markdown.zena.codeblock",
        "path": "./syntaxes/zena-markdown.tmLanguage.json",
        "injectTo": [
          "text.html.markdown"
        ],
        "embeddedLanguages": {
          "meta.embedded.block.zena": "zena"
        }
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/justinfagnani/zena"
  },
  "license": "MIT"
}
