{
  "name": "@zena-lang/compiler",
  "version": "0.0.1",
  "type": "module",
  "main": "lib/index.js",
  "scripts": {
    "build": "wireit",
    "test": "wireit",
    "test:portable": "wireit"
  },
  "files": [
    "lib"
  ],
  "wireit": {
    "build": {
      "command": "tsc",
      "files": [
        "src/**/*.ts",
        "tsconfig.json"
      ],
      "output": [
        "lib",
        "test"
      ],
      "dependencies": [
        "../stdlib:build"
      ],
      "clean": "if-file-deleted"
    },
    "test": {
      "command": "node --enable-source-maps test/run.js",
      "files": [
        "stdlib/**/*.zena",
        "test-files/**/*.zena"
      ],
      "output": [],
      "dependencies": [
        "build",
        "test:portable"
      ]
    },
    "test:portable": {
      "command": "node --enable-source-maps --experimental-wasm-exnref test/portable-runner.js",
      "files": [
        "../../packages/stdlib/zena/**/*.zena",
        "../../packages/stdlib/tests/**/*.zena",
        "../../tests/**/*.zena",
        "../../tests/**/*.json",
        "../stdlib/tests/**/*.zena",
        "../stdlib/zena/**/*.zena"
      ],
      "output": [],
      "dependencies": [
        "build"
      ]
    }
  },
  "devDependencies": {
    "@bytecodealliance/preview2-shim": "^0.17.5",
    "@types/node": "^24.10.1",
    "@zena-lang/stdlib": "^0.0.1",
    "typescript": "^5.9.3"
  }
}
