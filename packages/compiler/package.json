{
  "name": "@zena-lang/compiler",
  "version": "0.0.1",
  "type": "module",
  "main": "lib/index.js",
  "scripts": {
    "build": "wireit",
    "test": "wireit"
  },
  "wireit": {
    "build": {
      "command": "tsc",
      "files": [
        "src/**/*.ts",
        "tsconfig.json"
      ],
      "output": [
        "lib",
        "test"
      ],
      "dependencies": [
        "../runtime:build"
      ],
      "clean": "if-file-deleted"
    },
    "test": {
      "command": "run_tests() { if [ $# -eq 0 ]; then node --enable-source-maps --test --test-reporter=spec \"test/**/*_test.js\"; else node --enable-source-maps --test --test-reporter=spec \"$@\"; fi; }; run_tests",
      "files": [
        "stdlib/**/*.zena",
        "test-files/**/*.zena"
      ],
      "output": [],
      "dependencies": [
        "build"
      ]
    }
  },
  "devDependencies": {
    "@bytecodealliance/preview2-shim": "^0.17.5",
    "@types/node": "^24.10.1",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@zena-lang/runtime": "^0.0.1"
  }
}
