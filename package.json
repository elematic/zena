{
  "name": "zena-monorepo",
  "version": "0.0.0",
  "private": true,
  "engines": {
    "node": ">=25.0.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "wireit",
    "test": "wireit",
    "format": "npm run format:fix",
    "format:check": "prettier \"**/*.{cjs,html,js,json,md,ts}\" --check",
    "format:fix": "prettier \"**/*.{cjs,html,js,json,md,ts}\" --write",
    "ignore-sync": "ignore-sync .",
    "build:website": "npm run build -w @zena-lang/website",
    "serve:website": "npm run serve -w @zena-lang/website",
    "wasmtime:build": "./scripts/wasmtime-run.sh"
  },
  "wireit": {
    "build": {
      "dependencies": [
        "./packages/cli:build",
        "./packages/compiler:build",
        "./packages/runtime:build",
        "./packages/stdlib:build"
      ]
    },
    "test": {
      "dependencies": [
        "./packages/compiler:test",
        "./packages/cli:test",
        "./packages/runtime:test",
        "./packages/stdlib:test"
      ]
    }
  },
  "devDependencies": {
    "ignore-sync": "^8.0.0",
    "prettier": "^3.6.2",
    "wireit": "^0.14.12"
  }
}
